{
  "taskGroups": [
    {
      "taskSpec": {
        "runnables": [
          {
            "container": {
              "imageUri": "us-central1-docker.pkg.dev/uas-orchestration-engine/orchestration-images/uas-worker:latest",
              "entrypoint": "/bin/bash",
              "commands": [
                "/app/shell_scripts/worker/7_plot_to_patch_om.sh"
              ]
            },
            "environment": {
              "variables": {
                "PLATFORM": "{{ platform }}",
                "JOB_NAME": "plot_to_patch_om_{{ job_title }}",
                "GCP_JOB_NAME": "{{ step }}-{{ om }}-{{ sensor_type }}-{{ date }}-{{timestamp}}",
                "JOB_ID": "{{ step }}-{{ om }}-{{ sensor_type }}-{{ date }}-{{timestamp}}",
                "OM": "{{ om }}",
                "SENSOR_TYPE": "{{ sensor_type }}",
                "DATE": "{{ date }}",
                "JOB_TITLE": "{{ job_title }}",
                "PYTHON_SCRIPT": "{{ python_script }}",
                "INPUT_PATH": "{{ input_path }}",
                "OUTPUT_PATH_PLOT_PATCHES": "{{ output_path_plot_patches }}",
                "PERF_LOG_DIR": "{{ logdir_perf }}",
                "MEMORY": "{{ resources.memory | default(48) }}"
              }
            }
          }
        ],
        "computeResource": {
          "cpuMilli": {{ (resources.cpus | default(4)) * 1000 }},
          "memoryMib": {{ (resources.memory | default(48) | int) * 1024 }}
        }
      },
      "taskCount": 1
    }
  ],
  "allocationPolicy": {
    "instances": [
      {
        "policy": {
          "machineType": "{{ resources.machine_type | default('n2-highmem-8') }}",
          "provisioningModel": "STANDARD"
        }
      }
    ]
  },
  "logsPolicy": {
    "destination": "CLOUD_LOGGING"
  }
}